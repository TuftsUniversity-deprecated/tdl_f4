<%= render "curation_concerns/shared/item_header" %>

<div class="col-md-12 tdl-content">
  <div class="row col-md-6">
    <audio controls="controls" preload="metadata" width="445px" height="34px">
      <source src="<%= Rails.application.routes.url_helpers.download_path(@presenter.member_presenters[0]) %>" type="audio/mpeg">
    </audio>
<%
if @document_tei.present?
  participants = show_participants(@document_tei)

  if participants.length > 0
%>
    <br>
    <div class="participant_div">
      <b>Participants</b><br>
      <%= raw participants %>
    </div>  <!-- participant_div -->
<%
  end
end
%>
  </div>

  <div class="col-xs-6">
<% if @document_tei.present? %>
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#information">Information</a></li>
      <li><a data-toggle="tab" href="#transcript">Transcript</a></li>
    </ul>

    <div class="tab-content">
      <div id="information" class="tab-pane active">
        <%= render "curation_concerns/shared/metadata" %>
      </div>

      <div id="transcript" class="tab-pane">
        <div class="transcript_box">
          <p>- transcript goes here -</p>
        </div>  <!-- transcript_box -->
      </div>
    </div>
<% else %>
  <%= render "curation_concerns/shared/metadata" %>
<% end %>
  </div> <!-- right column -->
</div>
